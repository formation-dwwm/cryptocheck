{% extends 'crypto/base.html.twig' %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <h1>Cr√©ation Article</h1>
    {{ form_start(formArticle) }}
        {{ form_row(formArticle.title, {'attr' : {'placeholder' : "Titre de l'article"}}) }}
        {{ form_row(formArticle.createdBy, {'attr' : {'placeholder' : "Auteur de l'article"}}) }}
        {{ form_row(formArticle.content, {'attr' : {'placeholder' : "Contenu de l'article"}}) }}
        {{ form_row(formArticle.image, {'attr' : {'placeholder' : "Importer une image"}}) }}
        {{ form_row(formArticle.source, {'attr' : {'placeholder' : "Source de l'article"}}) }}
        <button type="submit" class="btn btn-success">
            {% if editMode %}
                Enregistrer les modifications
            {% else %}
                Ajouter un article
            {% endif %}
        </button>
    {{ form_end(formArticle)}}
{% endblock %}