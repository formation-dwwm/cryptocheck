{% extends 'crypto/base.html.twig' %}

{% block body %}
    <div class="form">
        <h1>Inscription sur Cryptocheck</h1>
        {{ form_start(form) }}
            {{ form_row(form.username, {'label' : 'Entrez votre nom d\'utilisateur', 'attr' : {'placeholder' : 'Pseudo'}}) }}
            {{ form_row(form.email, {'label' : 'Entrez votre email', 'attr' : {'placeholder' : 'Email'}}) }}
            {{ form_row(form.password, {'label' : 'Entrez votre mot de passe', 'attr' : {'placeholder' : 'Mot de passe'}}) }}
            {{ form_row(form.confirm_password, {'label' : 'Confirmez votre mot de passe', 'attr' : {'placeholder' : 'Mot de passe'}}) }}
            <button type="submit" class="btn btn-success">Inscription</button>
        {{ form_end(form) }}
    </div>
{% endblock %}