{% extends 'crypto/base.html.twig' %}

{% block body %}
    <form method="post" action="{{ path('connexion') }}">
        <fieldset>
            <legend class="title">Login</legend>
            <div class="FORM">
                <div class="form-group">
                    <label>Nom d'utilisateur</label>
                    <input type="text" class="form-control" required name="_username" placeholder="Entrez votre nom d'utilisateur">
                </div>
                <div class="form-group">
                    <label>Mot de passe</label>
                    <input type="password" class="form-control" required name="_password" placeholder="Entrez votre mot de passe">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Se connecter</button>
                </div>
            </div>
        </fieldset>
    </form>

{% if error %}
    <div class="alert alert-danger">Email ou Mot de Passe invalide</div>
{% endif %}

{% endblock %}

