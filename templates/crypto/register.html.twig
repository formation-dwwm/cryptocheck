{% extends 'crypto/base.html.twig' %}

{% block body %}
    <form method="post" action="/register">
        <fieldset>
            <legend class="title">Inscription</legend>
            <div class="FORM">
                <div class="form-group">
                    <label>Nickname</label>
                    <input type="text" class="form-control" name="username" placeholder="Enter nickname">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Enter Password">
                </div>
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" name="email" placeholder="Enter email">
                    <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="InputPhoneNumber">Phone Number</label>
                    <input type="tel" class="form-control"  name="tel" placeholder="Enter phone number">
                </div>
                <div class="form-group">
                    <input type="submit" name="submit" value="Submit" class="form-control">
                </div>
            </div>
        </fieldset>
    </form>

    {% if error != NULL %}
        {{ error }}
    {% elseif success == true %}
      <p>Your Confirmation link Has Been Sent To Your Email Address.</p>
    {% endif %}

{% endblock %}

